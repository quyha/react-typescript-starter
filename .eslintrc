{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": 9,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "airbnb-typescript",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": ["@typescript-eslint", "react", "react-hooks"],
    "rules": {
        "react/jsx-filename-extension": 0,
        "react/require-default-props": 0,
        "react/prefer-stateless-function": 1,
        "react/prop-types": 0,
        "react/jsx-uses-vars": [2],
        "react/no-array-index-key": 0,
        "react/jsx-curly-spacing": [2, "always"],
        "react/jsx-indent": [1, 4],
        "react/jsx-indent-props": 0,
        "react/no-unused-state": 1,
        "react/jsx-one-expression-per-line": 0,
        "react/forbid-prop-types": 0,
        "react/no-did-update-set-state": 0,
        "react/jsx-props-no-spreading": 0,
        "jsx-a11y/anchor-is-valid": 0,
        "jsx-a11y/click-events-have-key-events": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "jsx-a11y/label-has-associated-control": 0,
        "jsx-a11y/label-has-for": 0,
        "@typescript-eslint/no-console": 0,
        "quotes": "off",
        "@typescript-eslint/quotes": [1, "single", "avoid-escape"],
        "@typescript-eslint/import/prefer-default-export": 0,
        "indent": "off",
        "@typescript-eslint/indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "@typescript-eslint/semi": [0, "never"],
        "@typescript-eslint/no-return-assign": 0,
        "@typescript-eslint/no-restricted-syntax": 0,
        "@typescript-eslint/no-prototype-builtins": 0,
        "@typescript-eslint/no-unused-vars": 1,
        "@typescript-eslint/quote-props": 0,
        "@typescript-eslint/spaced-comment": 0,
        "@typescript-eslint/no-unneeded-ternary": 0,
        "@typescript-eslint/consistent-return": 0,
        "@typescript-eslint/no-nested-ternary": 0,
        "@typescript-eslint/camelcase": 0,
        "@typescript-eslint/arrow-body-style": 0,
        "@typescript-eslint/no-underscore-dangle": 0,
        "@typescript-eslint/no-loop-func": 0,
        "@typescript-eslint/func-names": 0,
        "max-len": 0,
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "no-multiple-empty-lines": [2, { "max": 1, "maxEOF": 0, "maxBOF": 0 }],
        "array-bracket-spacing": [2, "always"],
        "template-curly-spacing": [2, "always"],
        "object-curly-spacing": [2, "always"],
        "prefer-const": 1,
        "comma-dangle": ["error", "only-multiline"],
        "no-param-reassign": [
            2,
            {
                "props": false
            }
        ],
        "object-curly-newline": [
            "error",
            {
                "ExportDeclaration": { "multiline": true, "minProperties": 6 }
            }
        ],
        "import/prefer-default-export": 0,
        "linebreak-style": 0
    }
}
